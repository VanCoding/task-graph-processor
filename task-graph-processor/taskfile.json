{
  "buildDeps": {
    "kind": "virtual",
    "dependencies": ["watch-task-protocol:build"]
  },
  "build": {
    "command": "tsc-watch",
    "after": ["clean", "buildDeps"]
  },
  "clean": "rm -rf dist",
  "test": {
    "command": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' jest src/**",
    "after": ["build"]
  }
}
